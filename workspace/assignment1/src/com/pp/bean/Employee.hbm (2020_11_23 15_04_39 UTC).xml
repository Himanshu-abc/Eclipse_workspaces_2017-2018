<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping  package="com.pp.bean">
<class name="Employee" table="employee_table">
<id name="id" column="emp_id">
<generator class="assigned"></generator>
</id>

<property name="name" column="emp_name"/>

<property name="city" column="emp_city"/>

<property name="salary" column="emp_salary"/>

<property name="email" column="emp_email"/>

</class>
</hibernate-mapping>